<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaceMark.Information"
             Title="Information">
    <StackLayout HorizontalOptions="Fill" VerticalOptions="Start" Padding="10,10,10,10">

        <Grid Padding="20,0,30,0" ColumnDefinitions=" 15* , 15*" >


            <StackLayout Grid.Row="0" Grid.Column="0">
                <ImageButton Grid.Row="0" Grid.Column="0" Source="stretching" Clicked="OnRecClicked"/>
                <Label Grid.Row="0" Grid.Column="0" Text="Track and Field Warmup Guide" HorizontalOptions="Center" FontAttributes="Bold"/>
            </StackLayout>

            <StackLayout Grid.Row="0" Grid.Column="1">
                <ImageButton Grid.Row="0" Grid.Column="1" Source="running" Clicked="OnDssClicked" />
                <Label Grid.Row="0" Grid.Column="1" Text="Track and Field Raceday Preparation Guide" HorizontalOptions="Center" FontAttributes="Bold"/>
            </StackLayout>

        </Grid>
    </StackLayout>
</ContentPage>