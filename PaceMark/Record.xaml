<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaceMark.Record"
             Title="Record">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                x:Name="displayRecord"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <!-- Clear Record Button -->
            <Button 
                Text="Clear Record" 
                Clicked="OnClearRecordClicked"
                BackgroundColor="Red"
                TextColor="White"
                Margin="20"
                HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
